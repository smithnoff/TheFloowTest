<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorCardBg"
    tools:context="com.cesarsmith.thefloowtest.ui.view.activities.JourneysActivity">

    <TextView
        android:id="@+id/no_journey_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_gravity="center_horizontal"
        android:text="@string/no_journey"
        android:visibility="visible"
       />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_journeys"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
      >

    </android.support.v7.widget.RecyclerView>

</FrameLayout>
